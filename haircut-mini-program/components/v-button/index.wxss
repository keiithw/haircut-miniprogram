.button{
  display: inline-block;
  border-radius:  38rpx;
  box-shadow: 3px 8rpx 9rpx rgba(0, 0, 0, 0.17);

}

button::after {
  border: none;
}

.buttton-small{
  padding:0 32rpx;
  height: 50rpx;
  font-size: 22rpx;
  line-height: 50rpx;
}

.buttton-normal{
  width: 210rpx;
  height: 80rpx;
  font-size: 32rpx;
  line-height: 80rpx;
  text-align: center
}

.buttton-large{
  width: 100%;
  height: 80rpx;
  text-align: center
}

.buttton-small__default,.buttton-normal__default,.buttton-large__default{
  color:#333;
  background: white;
  border: 1rpx solid #333;
}

.buttton-small__primary,.buttton-normal__primary,.buttton-large__primary{
  color: white;
  background: linear-gradient(45deg, #9171fa, #8286fc);
}

.buttton-small__info,.buttton-normal__info,.buttton-large__info{
  color: white;
  background: #c9c9c9;
}

.text-white{
  color:white
}

.bg-white{
  background: white;
}



